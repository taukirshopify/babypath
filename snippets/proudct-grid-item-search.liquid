<div class="collection_item">
  <a class="product-items" href="{{ item.url }}">
    <div class="product_image_wrapper ">
      <img
        class="product-item-img firstImage"
        src="{{ item.featured_image | img_url: 'master' }}"
        alt="{{ item.title }}">
      {% if item.images[1] %}
        <img
          class="product-item-img secondImage"
          src="{{ item.images[1] | product_img_url: 'master' }}"
          alt="{{ item.title }}">

      {% endif %}
      {% if item.compare_at_price > item.price %}
        <div class="proudct-sale">
          On sale
        </div>
      {% endif %}

    </a>
  </div>
  <div class="product-item-p-text">
    {% if item.available %}
      <form
        method="post"
        action="/cart/add"
        class="add_to_cart_form">
        <input
          type="hidden"
          name="id"
          value="{{ item.first_available_variant.id }}" />
        <input
          type="submit"
          class="addcart__buttonwrap theme-btn shape-btn bg-black"
          data-id="{{ item.first_available_variant.id }}"
          value="Add to cart" />
      </form>

    {% else %}
      <a href="#" class="sold-item-cart">sold out</a>
    {% endif %}
    <p class="product-item-text">{{ item.title }}</p>
    <p class="product-item-text product_price">
      {% if item.compare_at_price > item.price %}
        <span class="sale-price">{{ item.price | money }}</span>
        <span class="regular-price compare_at_price">
          <del>{{ item.compare_at_price | money }}</del>
        </span>
      {% else %}
        <span class="regular-price">{{ item.price | money }}</span>
      {% endif %}
    </p>
  </div>


</div>
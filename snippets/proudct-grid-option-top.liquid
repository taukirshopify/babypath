


{%- if item.product.has_only_default_variant == false -%}


  {% else %}

    {%- for option in product.options_with_values -%}

      {% if option.name == "Color" %}
        {%- for value in option.values -%}
          
            {% comment %} {{ value | escape }} {% endcomment %}
          
        {%- endfor -%}
        {% else %}
    
        <div class="option-top-option-wrapper d-flex justify-content-center">
        
   
          {%- for value in option.values -%}
           <div class="singel-top-option text-center">
          
        
              <p>{{ value | escape }}</p>

            </div>
          {%- endfor -%}
        </div>
        {% endif %}
  

    {%- endfor -%}
  {%- endif -%}

  <style>
  .singel-top-option{
   display:inline-block;
   {% comment %} width:25px; {% endcomment %}
   height:25px;
   padding:0 10px;
  }
  .singel-top-option p{
   line-height:25px;
  }
  .option-top-option-wrapper {
    position: absolute;
    margin: 0 auto;
    width: 100%;
    bottom: 0;

    opacity: 0;
    visibility: hidden;
      background-color: rgba(255, 255, 255, 0.7);
      transition: top 300ms ease 0s, opacity 300ms ease 0s, visibility 300ms ease 0s;
  
}
.proudct-sale {
  transition: top 300ms ease 0s, opacity 300ms ease 0s, visibility 300ms ease 0s;
}
.collection_item:hover .proudct-sale {



  bottom: 32px;

}
.collection_item:hover .option-top-option-wrapper {
  opacity: 1;
  visibility: visible;
}
  </style>
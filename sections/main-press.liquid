<div class="press-wrapper">
    <div class="product-container">
    
    
<div class="row">
   <div class="col-md-4 col-sm-6 col-12 d-flex aligns-item-center">
    {% for item in section.blocks %}
         <div class="singel-press ">
            <a href="{{ item.settings.url }}"> <img src="{{  item.settings.img | img_url:''  }}" alt=""></a>
            <a href="{{ item.settings.url }}">{{ item.settings.dec }}</a>
         </div>
    {% endfor %}

   </div>
</div>
</div>
</div>

<style>
.singel-press{
 padding:3vw 1vw;
 
}
.singel-press img {
    width: 100%;
}
</style>


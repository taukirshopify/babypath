
    <div class="product-container">
    <div class="wrapper">
    
   
    
        <div class="row">
        
            {% for item in section.blocks %}
                <div class="col-md-4 col-sm-6 col-12 d-flex aligns-item-center text-center">
                  <div class="singel-press ">
                        <a href="{{ item.settings.url }}" target="_blank" class="d-block"> <img src="{{  item.settings.img | img_url:''  }}" alt=""></a>
                        <a href="{{ item.settings.url }} " target="_blank" class="d-block">{{ item.settings.dec }}</a>
                    </div>
                </div>
            {% endfor %}

        
        </div>
    </div>
</div>


<style>
.singel-press{
 padding:3vw 1vw;
 display: flex;
 flex-direction: column;
 justify-content: space-between;
 
}
.singel-press img {
    max-width: 200px;
    
}
.singel-press a.d-block {
    font-size: 1.25rem;
 
}
</style>


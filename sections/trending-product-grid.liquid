<script>
  var divElement = document.querySelector('.show-more');

  // Add a click event listener to the div element
  divElement.addEventListener('click', function() {
    // Add the class 'new-class' to the div element
    divElement.classList.add('d-none');
  });



  function showDivs() {

    var divs = document.getElementsByClassName("div-element");
  
    // Loop through all the divs
    for (var i = 0; i < divs.length; i++) {
      // Check if the div has the "d-none" class
      if (divs[i].classList.contains("d-none")) {
        // Remove the "d-none" class from the div
        divs[i].classList.remove("d-none");
      }
    }

    

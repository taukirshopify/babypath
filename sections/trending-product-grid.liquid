{% include 'spurit_po2_section_snippet', product: null, products: collections[section.settings.product_grid_collection].products %}
<!-- justin-area strAT -->  
<section class="product-area">
    <div class="product-container">
        <ul class="product-title nav nav-tabs pb-5">
            <li><a class="product-toggle active">{{ section.settings.product_grid_name }}</a></li>
        </ul>
        <div class="tab-content">
          <div class="collection_grid row pt-4">
            {% for product in collections[section.settings.product_grid_collection].products limit:16 %}
              {% if forloop.index > 8 %}
              <div class="col-md-3 d-none div-element">
                
                {% render 'homepagegrid',
                  product: product, %}
              </div>
              {% else %}
              <div class="col-md-3  div-element">
                
                {% render 'homepagegrid',
                  product: product, %}
             </div>
            {% endif %}
              {% endfor %}
              <div class="col-12 text-center">
                <button class="show-more" onclick="showDivs()">Show More</button>
              </div>
          </div>
        </div> 
    </div>
</section>


<!-- justin-area end -->
{% schema %}
    {
      "name": "Simple Product Grid",
      "settings": [
        {
          "type": "text",
          "id": "product_grid_name",
          "label": "Product Grid Section Name"
        },
        {
        "type": "collection",
        "id": "product_grid_collection",
        "label": "Pick Collection"
        }
      ],
    "presets": [
    {
      "name": "Simple Product Grid",
      "category": "section"
    }
  ]
    }
  {% endschema %}
  

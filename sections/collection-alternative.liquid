      ],
      "blocks": [
      {
        "name": "Alternative Collections",
        "type": "slide",
        "settings": [
            {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Upload Image"
        },
        {
          "type": "text",
          "id": "collection_title",
          "label": "Collection Title"
        },
        {
          "type": "url",
          "id": "collection_cta_url",
          "label": "Collection CTA URL"
        }
        ]
      }
    ],
    "presets": [
    {
      "name": "Alternative Collections",
      "category": "section"
    }
  ]
    }

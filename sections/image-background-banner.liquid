<section class="x-container">
<div class="row">
<div class="col-12">
  <div class="video-wrapper">
    <video muted autoplay loop playsinline controls>
      <source src="{{ section.settings.u }}" type="video/mp4">
    </video>
  </div>
</div>
</div>
</section>
<!-- panties-area end -->

{% schema %}
    {
      "name": "Video",
      "settings": [
         {
          "type": "text",
          "id": "u",
          "label": "Video url",
          "default": "http://www.adrianparr.com/download/keyboard-video.mp4",
 
          "placeholder": "http://www.adrianparr.com/download/keyboard-video.mp4"
         }
      ],
        "presets": [
            {
            "name": "Video"

            }
        ]
    }
{% endschema %}

<style>

video {
  display: inline-block;
  width: 100%;
}

<!-- panties-area strat -->
<section class="panties-area" style="background-image: url('{{ section.settings.background_image | img_url: 'master'}}');">
<div class="panties-container">
    <div class="f-hero-container panties-items"> 
        <h2>{{ section.settings.banner_title }}</h2> 
        <p>{{ section.settings.banner_subtitle }}</p>
        <a class="theme-btn shape-btn" href="{{ section.settings.banner_cta_url }}">{{ section.settings.banner_cta_title }}</a> 
    </div> 
</div>
</section>
<!-- panties-area end -->


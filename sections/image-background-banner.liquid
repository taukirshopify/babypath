    {
      "name": "Image Background Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Upload Background Image"
        },
        {
          "type": "text",
          "id": "banner_title",
          "label": "Banner Title"
        },
        {
          "type": "text",
          "id": "banner_subtitle",
          "label": "Banner Sub Title"
        },
        {
          "type": "text",
          "id": "banner_cta_title",
          "label": "Banner Button Title"
        },
        {
          "type": "url",
          "id": "banner_cta_url",
          "label": "Banner CTA URL"
        }
      ],
        "presets": [
            {
            "name": "Image Background Banner",
            "category": "section"
            }
        ]
    }
  {% endschema %}
  

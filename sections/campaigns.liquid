        "blocks": [
            {
                "type": "campaing",
                "name": "campaing",
                "settings": [
                      
                      {
            
                        "id": "u",
                        "label": "Video Upload",
                        "type": "video"
                       },
                       {
                        "type": "text",
                        "id": "h2",
                        "label": "Campaing Title",
                        "default": "Baby Phat x Forever 21"
           
                       },
                       {
                        "type": "text",
                        "id": "p",
                        "label": "Decription"
                       },
                       {
                        "type": "text",
                        "id": "btn",
                        "label": "Butoon Title",
                        "default": "shop lookbook"
                       },
                       {
                        "type": "url",
                        "id": "url",
                        "label": "Connect the link"
                       }
                ]
            }
        ],
        "presets": [
            {
            "name": "campaing"

            }
        ]
        
    }
